<!DOCTYPE html>
<html>
  <head>
    <title>Ssd</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="wrapper">
  <nav class="navbar navbar-default col-12" role="navigation">
  <div class="navbar-inner">
 <ul class="nav navbar-nav navbar-left">
    <li class="<%= 'active' if params[:controller] == 'landing' %>" > <a href="/"> Home</a></li>
    <li class="<%= 'active' if params[:controller] == 'feed' %>"> <a href="/posts"> Browse </a></li>
    <% if user_signed_in? %>
      <li><%= link_to "New Post", new_post_path %></li>
    <% else %>
     <li class="<%= 'active' if params[:controller] == 'sign_in' %>"> <a href="/users/sign_in"> Sign In </a></li>
     <li class="<%= 'active' if params[:controller] == 'sign_up' %>"> <a href="/users/sign_up"> Sign Up </a></li>
    <% end %>
 </ul>
    <ul style="float: right;" class="nav navbar-nav navbar-right">
    <li>
      <% if user_signed_in? %>
        <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
        <% else %><% end %>
    </li>
  </ul>
    </div>
</nav>
    <!-- uses bootstrap to produce a message of your choice -->
    <% flash.each do |a, b| %> 
      <div class="alert alert-success"> <%= b %> </div>
    <% end %>
    <%= yield %>
    </div>
  </body>
</html>
