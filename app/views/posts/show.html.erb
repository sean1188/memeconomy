<h1>Posts#show</h1>

<div class="post">
	<%= image_tag url_for(@post.image) %>
	<%= @post.description %>

	<% if @post.user_id == current_user.id %>
		<%= link_to "Edit Post", edit_post_path(@post) %>
		<%= link_to "Delete Post", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %>
	<% end %>
</div>